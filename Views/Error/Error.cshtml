@using Microsoft.Extensions.FileProviders

@{
    Layout = string.Empty;
}
<html lang="en-us" class="no-js">
<head>
    <meta charset="utf-8"/>
    <title>OOPS - That's an error...</title>
    <meta name="description" content="Error page on Mike's Website."/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="author" content="Michael M. Robinson"/>
    <link rel="stylesheet" type="text/css" href="~/css/NotFound/style.css"/>
</head>
<body>

<!-- logo on the top left -->
<a asp-action="Index" asp-controller="Home" class="logo-link" title="back home">
    <img src="~/imgs/NotFound/logo.png" class="logo" alt="Mike Robinson Developer"/>
</a>

<div class="content">
    <div class="content-box">
        <div class="big-content">
